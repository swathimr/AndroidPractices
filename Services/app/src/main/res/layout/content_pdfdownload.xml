<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.swathibala.services.PDFDownloadActivity"
    tools:showIn="@layout/activity_pdfdownload">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_pdfdownload"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/PDFdlddesc"
        android:id="@+id/textView1"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PDF File 1: "
        android:id="@+id/textlabel1"
        android:layout_below="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textSize="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textbox1"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/textlabel1"
        android:layout_marginLeft="5dp"
        android:inputType="text"
        android:layout_marginTop="30dp"
        android:textSize="15dp"
        android:hint=" Specify File location "
        android:background="@drawable/shape">
        <requestFocus/>
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" prg:"
        android:id="@+id/prg11"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/textbox1"
        android:layout_marginTop="30dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PDF File 2: "
        android:id="@+id/textlabel2"
        android:layout_below="@+id/textlabel1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textbox2"
        android:layout_below="@+id/textbox1"
        android:layout_toRightOf="@+id/textlabel2"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:hint=" Specify File location "
        android:background="@drawable/shape"
        android:textSize="15dp">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" prg:"
        android:id="@+id/prg2"
        android:visibility="invisible"
        android:layout_below="@+id/textbox1"
        android:layout_toRightOf="@+id/textbox2"
        android:layout_marginTop="10dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PDF File 3:"
        android:id="@+id/textlabel3"
        android:layout_below="@+id/textlabel2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textbox3"
        android:layout_below="@+id/textbox2"
        android:layout_toRightOf="@+id/textlabel3"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:hint=" Specify File location "
        android:background="@drawable/shape"
        android:textSize="15dp">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" prg:"
        android:id="@+id/prg3"
        android:visibility="invisible"
        android:layout_below="@+id/textbox2"
        android:layout_toRightOf="@+id/textbox3"
        android:layout_marginTop="10dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PDF File 4:"
        android:id="@+id/textlabel4"
        android:layout_below="@+id/textlabel3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textbox4"
        android:layout_below="@+id/textbox3"
        android:layout_toRightOf="@+id/textlabel4"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:hint=" Specify File location "
        android:background="@drawable/shape"
        android:textSize="15dp">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" prg:"
        android:id="@+id/prg4"
        android:visibility="invisible"
        android:layout_below="@+id/textbox3"
        android:layout_toRightOf="@+id/textbox4"
        android:layout_marginTop="10dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PDF File 5:"
        android:id="@+id/textlabel5"
        android:layout_below="@+id/textlabel4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textbox5"
        android:layout_below="@+id/textbox4"
        android:layout_toRightOf="@+id/textlabel5"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:hint=" Specify File location "
        android:background="@drawable/shape"
        android:textSize="15dp">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" prg:"
        android:visibility="invisible"
        android:id="@+id/prg5"
        android:layout_below="@+id/textbox4"
        android:layout_toRightOf="@+id/textbox5"
        android:layout_marginTop="10dp"
        android:textSize="15dp" />

    <Button
        android:id="@+id/startdwnldbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textlabel5"
        android:onClick="startDownload"
        android:minWidth="250dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:text="Start Download"/>

    <Button
        android:id="@+id/closebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startdwnldbutton"
        android:onClick="exitApp"
        android:minWidth="250dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:text="Finish"/>

</RelativeLayout>
